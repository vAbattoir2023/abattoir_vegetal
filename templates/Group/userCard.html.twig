 <article class="card-user card-small" id="card-{{user.id}}"><!-- CLASSE PERMETTANT DAGRANDIR LA CARTE -->
    <div class="entiere">
        <div>
            <img class="img-user"
                src="{{ user.image }}" alt="">
        </div>
        <div class="description">
            <div class="row"> <!-- NOM DRAPEAU DE LANGAGE PARLER -->
                <div class="col-8">
                    <p class="pbold tag">{{ user.username }}
                    <img src="../assets/img/icones/zodiac/zodiac-capricorne.svg" alt=""></p>
                </div>
                <div class="col-4 d-flex justify-content-end">
                    {% for languageCode in user.language %}
                        <p class="drapeau tag "><img src="https://www.countryflagicons.com/SHINY/32/{{ languageCode }}.png" alt="{{ languageCode }}"></p>
                    {% endfor %}                 
                </div>
            </div>
            <div class="row"><!--  REGION/AGE/GENRE   -->
                <div class="col-8 infos-contact">
                    <p class="tag mt-3">
                        <img src="../assets/img/icones/infos-contact/localisation.svg" alt=""> {{ user.city }}
                    </p>
                    <p class="tag mt-2">
                        <img src="../assets/img/icones/infos-contact/anniversaire.svg" alt=""> {{ user.age }}
                    </p>
                    <p class="tag mt-2">
                        <img src="../assets/img/icones/selection/selection-genre-off.svg" alt="">{{ user.gender }}
                    </p>
                </div>
            </div>

            <div class="row"><!-- CENTRE DINTERRET  -->
                <div class="col jm">
                    <p class="pbold mt-4">J'aime...</p>
                    <div class="col d-flex flex-wrap align-items-start">
                        {% for interest in user.centerOfInterest %}  
                            <p class="tag-jaune-small psmall tag me-auto">{{ interest }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <p class="col-12 citation">«{{ user.description }}»</p>

            <div class="row">

                <div class="col jerfuse">

                    <p class="pbold mt-4">Je refuse...</p>
                    <div class="col d-flex align-items-start">
                        <p class="tag-jaune-small psmall tag me-3">Racistes</p>
                        <p class="tag-jaune-small psmall tag me-3">Vegans</p>
                        <p class="tag-jaune-small psmall tag me-3">Jeux d'argent</p>
                    </div>

                </div>

            </div>

            <div class="col-12 boutons d-flex mt-5">
                <div class="bt-zoom me-3" data-card="card-{{user.id}}"></div><!-- BOUTON DE ZOOM DE CARTE AVEC LA DATA CARD APELLER COTER J.S -->
                   
                <a href="#" class="bouton-small-transparent reduire">gimme this friend</a>
            </div>
        </div>
    </div>
</article>