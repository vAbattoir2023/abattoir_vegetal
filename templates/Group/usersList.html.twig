<button type='submit' id="addGroup">add group</button>
<div class="col-md-9 defile-card d-flex flex-wrap row g-0">
	<div class="gauche offset-2 col-6 col-md-6">
		{% for user in users %}
			<!-- User Card -->
			<article
				class="card-user card-small" id="card-{{ user.id }}">
				<!--petite card avec  card-small-->
				<div class="entiere">
					<div>
						<img class="img-user" src="{{ user.image }}" alt="">
					</div>
					<div
						class="description">

						<!-- LIGNE NOM ET DRAPEAUX -->
						<div class="row">
							<div class="col-8">
								<p class="pbold tag">{{ user.username }}
									<img src="Assets/ICONES/zodiac/zodiac-capricorne.svg" alt=""></p>
							</div>
							<div class="col-4 d-flex justify-content-end">
								{% for languageCode in user.language %}
									<img src="https://www.countryflagicons.com/SHINY/32/{{ languageCode }}.png" alt="{{ languageCode }}">
								{% endfor %}
							</div>
						</div>
						<div class="row">
							<div class="col-8 infos-contact">
								<p class="tag mt-3">
									<img src="Assets/ICONES/infos-contact/localisation.svg" alt="">
									{{ user.city }}
								</p>
								<p class="tag mt-2">
									<img src="Assets/ICONES/infos-contact/anniversaire.svg" alt="">
									{{ user.age }}
								</p>
								<p class="tag mt-2">
									<img src="Assets/ICONES/selection/selection-genre-off.svg" alt="">
									{{ user.gender }}
								</p>
							</div>
							<div class="col-4 tag-prefs">
								<div class="tag-menthe d-flex flex-column align-items-end mt-3">
									<p class="tag-menthe-small psmall tag">{{ user.centerOfInterestPerso }}</p>
								</div>
							</div>
						</div>

						<div class="row">

							<div class="col jm">

								<p class="pbold mt-4">J'aime...</p>
								<div class="col d-flex align-items-start flex-wrap">
									{% for interest in user.centerOfInterest %}
										<p class="border ms-3 p-3 border-danger">{{ interest }}</p>
									{% endfor %}
								</div>

							</div>

						</div>

						<p class="col-12 citation">{{ user.description }}</p>

						<div class="row">

							<div class="col jerfuse">

								<p class="pbold mt-4">Je refuse...</p>
								<div class="col d-flex align-items-start flex-wrap">
									<p class="tag-jaune-small psmall tag me-3">Racistes</p>
									<p class="tag-jaune-small psmall tag me-3">Vegans</p>
									<p class="tag-jaune-small psmall tag me-3">Jeux d'argent</p>
								</div>

							</div>

						</div>

						<div class="col-12 boutons d-flex mt-5">

							<div id="zoom-card-click">
								<div class="bt-zoom" data-card="card-{{ user.id }}"></div>
							</div>
							<div>
								<a href="#" class="bouton-small-transparent reduire">gimme this friend</a>
							</div>


						</div>
					</div>
				</div>
			</article>
		{% endfor %}
	</div>
</div>
