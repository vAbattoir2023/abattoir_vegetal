<section class="profil-section" id="jesuis" data-next="jaime" data-prev="">
    <div class="row">
        <div class="align-top maDiv col-4 offset-1"> <!-- 1ère partie card -->

            <div class="mb-3"> <!-- je m'appelle et j'habite input -->
                <div>
                    Je m'apelle...
                </div>
                    {{ form_widget(UserForm.username, {'attr': {'class': 'stroke-input mb-3'}}) }}
                <div>
                    J'habite...
                </div>
                    {{ form_widget(UserForm.postalCode, {'attr': {'class': 'stroke-input mb-3'}}) }}
            </div>
            <div class="mb-1 align-text"> <!-- je suis né inputx3-->
                <label for="jesuisné" class="date-wrap"> Je suis né(e) le ...</label>
                
                <div class="date-wrap">
                    <input type="text" name="jour" class="stroke">
                    <p>&nbsp;/&nbsp;</p>
                    <input type="text" name="mois" class="stroke">
                    <p>&nbsp;/&nbsp;</p>
                    <input type="text" name="annee" class="stroke-year">
                </div>
            </div>
            <div class="mb-4  align-text"> <!-- je suis bouton radio -->
                <div>
                    Je suis ...
                </div>
                <div class="flex-end" id="gender">              
                    {{ form_widget(UserForm.gender, {'attr': {'class': 'stroke-input form-check-input','style': 'border: none;font-size:18px;'}}) }} 
                </div>
                <div> <!-- Je parle input -->
                    <div class="mt-3">
                        Je parle...
                    </div>
                    <input type="text" aria-label="Je parle" class="stroke-input">
                
                </div>
            </div>
        </div>

            <div class="align-top maDiv col-4 offset-2"> <!-- 2ème partie card -->
            <div class="wrap-bouton mb-1"> <!-- img + btn -->
                <div>
                    {% if user is defined %}
                        <img src="{{ user.image }}" alt="" class="largeur">
                    {% else %}
                        <img src="../assets/img/icones/profil/profil-big.svg" alt="" class="largeur">
                    {% endif %}
                </div>
                <div class="position-bouton">
                    {{ form_widget(UserForm.image, {'attr': {'class': 'bouton-smallest-hug size-btn mb-3'}}) }}                  
                    <button class="bouton-smallest-hug size-btn mb-3">choisir un avatar</button>
                </div>
            </div>
            <div class="mb-3"> <!-- input 2ème partie card coter droit-->
                <div class="mt-3">
                    Je bosse dans...
                </div>
                     {{ form_widget(UserForm.job, {'attr': {'class': 'stroke-input mb-3'}}) }}                  
                <div class="mt-3 description">
                    {{ form_label(UserForm.description) }}
                    {{ form_widget(UserForm.description, {'attr': {'class': 'stroke-input mb-3'}}) }}
                    
                </div>
            </div>
        </div>

        <div class="row">
            <div class="offset-1 col-10"> <!-- 3ème partie card  bas-->
                <div> <!-- texte 3ème partie card -->
                    <p class="psmall mt-4">Mon régime alimentaire ...</p>
                </div>
                <div> <!-- btn radio -->
                    <div class="flex-pref mt-4">            
                        {{ form_widget(UserForm.diet) }}      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







