{% extends 'base.html.twig' %}

{% block title %}Api index{% endblock %}

{% block body %}
<section class="container">

    <h1>Gestion administrateur</h1>
    <h2>API User </h2>
     <a href="{{ path('app_admin_index')}}" class="btn btn-primary">Liste des utilisateurs</a>
     <a href="{{ path('app_admin_grpindex')}}" class="btn btn-primary">Liste des Résérvation</a>
     <a href="{{ path('app_home') }}" class="btn btn-success">Accueil</a>
    
    <h4>Création de User en base de donnée</h4>
     {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {# Afficher les messages d'erreur associés au champ "postalCode" #}
            {{ form_errors(form.postalCode) }}
        </div>
    {% endif %}
    <div  class="bg-light p-3">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary mt-2" type="submit">Register</button>
        {{ form_end(form) }}
    </div>
</section>

{% endblock %}